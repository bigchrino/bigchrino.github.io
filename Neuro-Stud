    <script>
        // Variables pour stocker les sÃ©lections
        let currentUser = null;
        let childrenIds = [];
        
        // Theme Toggle Functionality
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = themeToggle.querySelector('i');
        
        // Check for saved theme preference or respect OS preference
        if (localStorage.getItem('theme') === 'dark' || 
            (window.matchMedia('(prefers-color-scheme: dark)').matches && !localStorage.getItem('theme'))) {
            document.body.classList.add('dark-mode');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }
        
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            } else {
                localStorage.setItem('theme', 'light');
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
        });
        
        // Hamburger Menu Functionality
        const hamburgerMenu = document.getElementById('hamburgerMenu');
        const menuOverlay = document.getElementById('menuOverlay');
        const closeMenu = document.getElementById('closeMenu');
        
        hamburgerMenu.addEventListener('click', () => {
            hamburgerMenu.classList.toggle('active');
            menuOverlay.classList.toggle('active');
            
            // Prevent body scrolling when menu is open
            if (menuOverlay.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = 'auto';
            }
        });
        
        // Close menu when clicking on X button
        closeMenu.addEventListener('click', () => {
            hamburgerMenu.classList.remove('active');
            menuOverlay.classList.remove('active');
            document.body.style.overflow = 'auto';
        });
        
        // Close menu when clicking on overlay (outside menu content)
        menuOverlay.addEventListener('click', (e) => {
            if (e.target === menuOverlay) {
                hamburgerMenu.classList.remove('active');
                menuOverlay.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });
        
        // Fonction pour afficher le tableau de connexion
        function showAuthOverlay() {
            document.getElementById('authOverlay').classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        // Fonction pour cacher le tableau de connexion
        function hideAuthOverlay() {
            document.getElementById('authOverlay').classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        // Page Navigation avec vÃ©rification d'authentification
        document.querySelectorAll('[data-page]').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageId = link.getAttribute('data-page');
                
                // Si l'utilisateur n'est pas connectÃ© et essaie d'accÃ©der Ã  une page autre que l'accueil
                if (!currentUser && pageId !== 'accueil') {
                    // Afficher directement le tableau de connexion
                    showAuthOverlay();
                    return;
                }
                
                // Afficher la page demandÃ©e
                showPage(pageId);
                
                // Close menu if open
                hamburgerMenu.classList.remove('active');
                menuOverlay.classList.remove('active');
                document.body.style.overflow = 'auto';
                
                // Scroll to top
                window.scrollTo(0, 0);
            });
        });
        
        // Fonction pour afficher une page
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
        }
        
        // Boutons pour afficher le tableau de connexion
        document.getElementById('showAuthBtn').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        document.getElementById('showAuthBtn2').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        document.getElementById('showAuthBtn3').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        document.getElementById('showAuthBtn4').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        document.getElementById('showAuthBtn5').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        document.getElementById('showAuthBtn6').addEventListener('click', (e) => {
            e.preventDefault();
            showAuthOverlay();
        });
        
        // Fermer le tableau de connexion
        document.getElementById('closeAuth').addEventListener('click', () => {
            hideAuthOverlay();
        });
        
        // Fermer le tableau de connexion en cliquant Ã  l'extÃ©rieur
        document.getElementById('authOverlay').addEventListener('click', (e) => {
            if (e.target === document.getElementById('authOverlay')) {
                hideAuthOverlay();
            }
        });
        
        // Animation on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const animatedElements = document.querySelectorAll('.animate');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.visibility = 'visible';
                    }
                });
            }, { threshold: 0.1 });
            
            animatedElements.forEach(el => {
                el.style.visibility = 'hidden';
                observer.observe(el);
            });
        });

        // Gestion de l'authentification
        
        // Navigation par onglets
        document.querySelectorAll('.auth-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const tabId = this.getAttribute('data-tab');
                
                // Mettre Ã  jour les onglets actifs
                document.querySelectorAll('.auth-tab').forEach(t => {
                    t.classList.remove('active');
                });
                this.classList.add('active');
                
                // Afficher le formulaire correspondant
                document.querySelectorAll('.auth-form').forEach(form => {
                    form.classList.remove('active');
                });
                document.getElementById(tabId + 'Form').classList.add('active');
            });
        });
        
        // Changer le type de compte pour la connexion
        document.getElementById('loginAccountType').addEventListener('change', function() {
            const accountType = this.value;
            
            // Masquer tous les formulaires de connexion
            document.querySelectorAll('.account-login').forEach(form => {
                form.style.display = 'none';
            });
            
            // Afficher le formulaire correspondant
            document.getElementById(accountType + 'Login').style.display = 'block';
        });
        
        // Changer le type de compte pour l'inscription
        document.getElementById('registerAccountType').addEventListener('change', function() {
            const accountType = this.value;
            
            // Masquer tous les formulaires d'inscription
            document.querySelectorAll('.account-register').forEach(form => {
                form.style.display = 'none';
            });
            
            // Afficher le formulaire correspondant
            document.getElementById(accountType + 'Register').style.display = 'block';
        });
        
        // Ajouter un enfant pour l'inscription parent
        document.getElementById('addChildBtn').addEventListener('click', function() {
            const childId = document.getElementById('childId').value;
            if (childId && !childrenIds.includes(childId)) {
                childrenIds.push(childId);
                updateChildrenList();
                document.getElementById('childId').value = '';
            }
        });
        
        // Mettre Ã  jour la liste des enfants
        function updateChildrenList() {
            const childrenList = document.getElementById('childrenList');
            childrenList.innerHTML = '';
            
            childrenIds.forEach((id, index) => {
                const childItem = document.createElement('div');
                childItem.className = 'child-item';
                childItem.innerHTML = `
                    <span class="child-id">${id}</span>
                    <span class="remove-child" data-index="${index}">â</span>
                `;
                childrenList.appendChild(childItem);
            });
            
            // Ajouter des Ã©couteurs d'Ã©vÃ©nements pour supprimer
            document.querySelectorAll('.remove-child').forEach(btn => {
                btn.addEventListener('click', function() {
                    const index = parseInt(this.getAttribute('data-index'));
                    childrenIds.splice(index, 1);
                    updateChildrenList();
                });
            });
        }
        
        // Soumission du formulaire de connexion
        document.getElementById('loginSubmit').addEventListener('click', function() {
            const accountType = document.getElementById('loginAccountType').value;
            let isValid = true;
            
            // Validation basique
            if (accountType === 'student') {
                const matricule = document.getElementById('studentMatricule').value;
                const password = document.getElementById('studentPassword').value;
                
                if (!matricule || !password) {
                    isValid = false;
                }
            } else if (accountType === 'parent') {
                const loginId = document.getElementById('parentLoginId').value;
                const password = document.getElementById('parentPassword').value;
                
                if (!loginId || !password) {
                    isValid = false;
                }
            } else if (accountType === 'visitor') {
                const loginId = document.getElementById('visitorLoginId').value;
                const password = document.getElementById('visitorPassword').value;
                
                if (!loginId || !password) {
                    isValid = false;
                }
            } else if (accountType === 'school') {
                const matricule = document.getElementById('schoolMatricule').value;
                const password = document.getElementById('schoolPassword').value;
                
                if (!matricule || !password) {
                    isValid = false;
                }
            }
            
            if (isValid) {
                // Simuler une connexion rÃ©ussie
                currentUser = {
                    type: accountType,
                    name: getAccountTypeName(accountType) + ' Utilisateur'
                };
                
                updateUserInterface();
                hideAuthOverlay();
                showPage('accueil');
                alert('Connexion rÃ©ussie !');
            } else {
                alert('Veuillez remplir tous les champs obligatoires.');
            }
        });
        
        // Soumission du formulaire d'inscription
        document.getElementById('registerSubmit').addEventListener('click', function() {
            const accountType = document.getElementById('registerAccountType').value;
            let isValid = true;
            
            // Validation basique
            if (accountType === 'student') {
                const matricule = document.getElementById('studentRegisterMatricule').value;
                const email = document.getElementById('studentEmail').value;
                const password = document.getElementById('studentRegisterPassword').value;
                const confirmPassword = document.getElementById('studentConfirmPassword').value;
                
                if (!matricule || !email || !password || !confirmPassword) {
                    isValid = false;
                } else if (password !== confirmPassword) {
                    isValid = false;
                    alert('Les mots de passe ne correspondent pas.');
                }
            } else if (accountType === 'parent') {
                const name = document.getElementById('parentName').value;
                const email = document.getElementById('parentEmail').value;
                const password = document.getElementById('parentRegisterPassword').value;
                const confirmPassword = document.getElementById('parentConfirmPassword').value;
                
                if (!name || !email || !password || !confirmPassword || childrenIds.length === 0) {
                    isValid = false;
                } else if (password !== confirmPassword) {
                    isValid = false;
                    alert('Les mots de passe ne correspondent pas.');
                }
            } else if (accountType === 'visitor') {
                const name = document.getElementById('visitorName').value;
                const email = document.getElementById('visitorEmail').value;
                const idNumber = document.getElementById('visitorIdNumber').value;
                const password = document.getElementById('visitorRegisterPassword').value;
                const confirmPassword = document.getElementById('visitorConfirmPassword').value;
                
                if (!name || !email || !idNumber || !password || !confirmPassword) {
                    isValid = false;
                } else if (password !== confirmPassword) {
                    isValid = false;
                    alert('Les mots de passe ne correspondent pas.');
                }
            } else if (accountType === 'school') {
                const matricule = document.getElementById('schoolRegisterMatricule').value;
                const name = document.getElementById('schoolName').value;
                const email = document.getElementById('schoolEmail').value;
                const password = document.getElementById('schoolRegisterPassword').value;
                const confirmPassword = document.getElementById('schoolConfirmPassword').value;
                
                if (!matricule || !name || !email || !password || !confirmPassword) {
                    isValid = false;
                } else if (password !== confirmPassword) {
                    isValid = false;
                    alert('Les mots de passe ne correspondent pas.');
                }
            }
            
            if (isValid) {
                // Simuler une inscription rÃ©ussie
                currentUser = {
                    type: accountType,
                    name: getAccountTypeName(accountType) + ' Utilisateur'
                };
                
                updateUserInterface();
                hideAuthOverlay();
                showPage('accueil');
                alert('Inscription rÃ©ussie ! Vous Ãªtes maintenant connectÃ©.');
            } else {
                alert('Veuillez remplir tous les champs obligatoires correctement.');
            }
        });
        
        // Obtenir le nom du type de compte
        function getAccountTypeName(type) {
            const names = {
                'student': 'ÃlÃ¨ve',
                'parent': 'Parent',
                'visitor': 'Visiteur',
                'school': 'Ãcole'
            };
            
            return names[type] || type;
        }
        
        // Mettre Ã  jour l'interface utilisateur aprÃ¨s connexion
        function updateUserInterface() {
            const userMenuBtn = document.getElementById('mainLoginBtn');
            const userDropdown = document.getElementById('userDropdown');
            
            if (currentUser) {
                userMenuBtn.innerHTML = `<i class="fas fa-user"></i> ${currentUser.name} <span class="account-type-badge badge-${currentUser.type}">${getAccountTypeName(currentUser.type)}</span>`;
                
                // Mettre Ã  jour le menu dÃ©roulant
                userDropdown.innerHTML = `
                    <div class="user-dropdown-item">
                        <i class="fas fa-user-circle"></i> Mon profil
                    </div>
                    <div class="user-dropdown-item">
                        <i class="fas fa-cog"></i> ParamÃ¨tres
                    </div>
                    <div class="user-dropdown-divider"></div>
                    <div class="user-dropdown-item" id="logoutBtn">
                        <i class="fas fa-sign-out-alt"></i> Se dÃ©connecter
                    </div>
                `;
                
                // Ajouter l'Ã©couteur d'Ã©vÃ©nement pour la dÃ©connexion
                document.getElementById('logoutBtn').addEventListener('click', function() {
                    currentUser = null;
                    updateUserInterface();
                    showPage('accueil');
                });
            } else {
                userMenuBtn.innerHTML = `<i class="fas fa-sign-in-alt"></i> <span>Connexion</span>`;
                userDropdown.innerHTML = `
                    <div class="user-dropdown-item" id="loginBtn">
                        <i class="fas fa-sign-in-alt"></i> Se connecter
                    </div>
                    <div class="user-dropdown-item" id="registerBtn">
                        <i class="fas fa-user-plus"></i> S'inscrire
                    </div>
                `;
                
                // Ajouter les Ã©couteurs d'Ã©vÃ©nements pour la connexion et l'inscription
                document.getElementById('loginBtn').addEventListener('click', function() {
                    showAuthOverlay();
                    document.querySelector('.auth-tab[data-tab="login"]').click();
                    userDropdown.classList.remove('show');
                });
                
                document.getElementById('registerBtn').addEventListener('click', function() {
                    showAuthOverlay();
                    document.querySelector('.auth-tab[data-tab="register"]').click();
                    userDropdown.classList.remove('show');
                });
            }
        }
        
        // Gestion du menu utilisateur
        document.getElementById('mainLoginBtn').addEventListener('click', function() {
            if (currentUser) {
                document.getElementById('userDropdown').classList.toggle('show');
            } else {
                showAuthOverlay();
            }
        });
        
        // Fermer le menu dÃ©roulant en cliquant Ã  l'extÃ©rieur
        window.addEventListener('click', function(event) {
            if (!event.target.matches('#mainLoginBtn') && !event.target.closest('#mainLoginBtn')) {
                document.getElementById('userDropdown').classList.remove('show');
            }
        });
        
        // DÃ©connexion
        document.getElementById('logoutConfirm').addEventListener('click', function(e) {
            e.preventDefault();
            currentUser = null;
            updateUserInterface();
            showPage('accueil');
            alert('Vous avez Ã©tÃ© dÃ©connectÃ© avec succÃ¨s.');
        });
        
        // Initialiser l'interface utilisateur
        updateUserInterface();
    </script>
</body>
